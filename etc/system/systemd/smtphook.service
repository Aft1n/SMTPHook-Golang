[Unit]
Description=SMTPHook Golang Email Parser + Webhook stack
Requires=network-online.target
After=network-online.target

[Service]
Type=exec
WorkingDirectory=/home/void/code/SMTPHook-golang
ExecStart=/usr/bin/podman-compose -f podman-compose.yml up
ExecStop=/usr/bin/podman-compose -f podman-compose.yml down
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
